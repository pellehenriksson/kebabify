@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Kebabify.Web.Pages.IndexModel

<html>
<head>
    <meta charset="utf-8" />
    <title>--kebabify-- @Model.Version</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href='//fonts.googleapis.com/css?family=Raleway:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/lib/skeleton/skeleton.min.css" type="text/css" />

    <link rel="icon" type="image/png" href="/images/favicon.png">
</head>
<body>
    <div class="container">
        <h1>--kebabify--</h1>
        <form>
            <div class="row">
                <textarea class="u-full-width" placeholder="" id="input-textbox"></textarea>
                <input class="button" type="button" value="make-kebab" id="make-kebab-button">
            </div>
            <div class="row">
                <label for="copy-button">Kebab</label>
                <textarea class="u-full-width" placeholder="" id="kebab-textbox"></textarea>
                <input class="button" type="button" value="copy-to-clipboard" id="copy-button">
            </div>
        </form>
        <div class="row">
            <div class="twelve column">
                <code>@Model.Version</code>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/app.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            Kebabify.Make.init();
        });
    </script>
</body>
</html>

@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Kebabify.Web.Pages.IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>--kebabify-- @Model.Version</title>
    <meta name="description" content="A simple web app to convert text to kebab-case.">
    <meta name="author" content="">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="/images/favicon.png">

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .footer {
            padding: 20px 0;
            text-align: center;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <header class="text-center mb-5">
            <h1 class="display-4">--kebabify--</h1>
            <p class="lead">A simple, fast, and efficient tool to convert your text to <span class="badge bg-info text-dark">kebab-case</span>.</p>
        </header>

        <main>
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Input your text</h5>
                    <div class="mb-3">
                        <textarea class="form-control" id="input-textbox" rows="5" placeholder="Enter text here to kebabify..."></textarea>
                    </div>
                    <button type="button" class="btn btn-primary w-100" id="make-kebab-button">Make Kebab</button>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Kebab-cased output</h5>
                    <div class="mb-3">
                        <textarea class="form-control" id="kebab-textbox" rows="5" readonly placeholder="Your kebab-cased text will appear here..."></textarea>
                    </div>
                    <button type="button" class="btn btn-secondary w-100" id="copy-button">Copy to Clipboard</button>
                </div>
            </div>
        </main>
    </div>

    <footer class="footer bg-light mt-auto">
        <div class="container">
            <p class="text-muted">Kebabify App | Version: <code class="text-primary">@Model.Version</code></p>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/app.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(function () {
            Kebabify.Make.init();
        });
    </script>
</body>
</html>
